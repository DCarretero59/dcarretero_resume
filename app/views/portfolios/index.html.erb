<h1>Portfolio</h1>

<p id="notice"><%= notice %></p>

<%= link_to 'New' , new_portfolio_path%>

<% @portfolio_items.each do |p| %>
  <p><%= p.title %></p>
  <p><%= p.subtitle %></p>
  <p><%= p.body %></p>
  <%= image_tag p.thumb_image unless p.thumb_image.nil? %>
  <%= link_to 'See', portfolio_show_path(p) %>
  <%= link_to 'Edit', portfolio_edit_path(p) %>
  <%= link_to 'Delete', p, method: :delete, data: { confirm: 'Delete?' }%>
<% end %>
